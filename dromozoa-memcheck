dromozoa_error() {
  if test -t 2
  then
    printf '\33[33m[ERROR] %s\33[0m\n' "$1" >&2
  else
    printf '[ERROR] %s\n' "$1" >&2
  fi
  exit 1
}

if leaks -h >/dev/null 2>&1
then
  dromozoa_dirname() {
    expr  "X$1" : '\(X.*[^/]\)//*[^/][^/]*/*$' \
      '|' "X$1" : '\(X//\)[^/]' \
      '|' "X$1" : '\(X//\)$' \
      '|' "X$1" : '\(X/\)' \
      '|' X. | sed 's/^.//'
  }

  dromozoa_memcheck() {
    hook=$1
    shift
    case X$TMPDIR in
      X) TMPDIR=/tmp;;
    esac
    tmp=`(umask 077 && mktemp "$TMPDIR/dromozoa-XXXXXX" 2>/dev/null || :)`
    case X$tmp in
      X) tmp=$TMPDIR/dromozoa-$$-$RANDOM;;
    esac
    trap "rm -f '$tmp'" 0
    env \
      DROMOZOA_HOOK_ATEXIT='leaks "$DROMOZOA_HOOK_PID"; echo "$?" >"$DROMOZOA_HOOK_TMP"' \
      DROMOZOA_HOOK_TMP="$tmp" \
      DYLD_INSERT_LIBRARIES="$hook" \
      MallocStackLoggingNoCompact=1 \
      MallocScribble=1 \
      MallocPreScribble=1 \
        "$@"
    status=$?
    case X$status in
      X0) ;;
      *) exit "$status";;
    esac
    status=`cat "$tmp"`
    case X$status in
      X) dromozoa_error "cannot insert hook (maybe setuid/setgid binary or signed with entitlements)";;
      *) exit "$status";;
    esac
  }

  here=`dromozoa_dirname "$0"`
  here=`(cd "$here" && pwd)`
  root=`(cd "$here/.." && pwd)`
  if test -f "$here/.libs/libdromozoa-hook.dylib"
  then
    dromozoa_memcheck "$here/.libs/libdromozoa-hook.dylib" "$@"
  elif test -f "$root/lib/libdromozoa-hook.la"
  then
    . "$root/lib/libdromozoa-hook.la"
    if test -f "$libdir/$dlname"
    then
      dromozoa_memcheck "$libdir/$dlname" "$@"
    fi
  fi
  dromozoa_error "cannot find hook"
elif valgrind --version >/dev/null 2>&1
then
  exec valgrind \
    --track-fds=yes \
    --error-exitcode=1 \
    --leak-check=full \
    --show-reachable=yes \
    --track-origins=yes \
      "$@"
else
  dromozoa_error "cannot find leaks or valgrind"
fi
